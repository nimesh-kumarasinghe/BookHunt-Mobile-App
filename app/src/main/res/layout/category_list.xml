<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/background_slot"
        android:layout_width="134dp"
        android:layout_height="191dp"
        android:adjustViewBounds="true"
        android:background="#E9F6FF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundCorner" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_cat_image"
        android:layout_width="87dp"
        android:layout_height="132dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sampleimage"
        app:layout_constraintBottom_toBottomOf="@+id/background_slot"
        app:layout_constraintEnd_toEndOf="@+id/background_slot"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/background_slot"
        app:layout_constraintTop_toBottomOf="@+id/txt_cat_name"
        app:layout_constraintVertical_bias="0.45"
        app:shapeAppearanceOverlay="@style/RoundCorner" />

    <TextView
        android:id="@+id/txt_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-medium"
        android:text="Categry"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/background_slot"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/background_slot"
        app:layout_constraintTop_toTopOf="@+id/background_slot" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="133dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_slot"
        app:srcCompat="@drawable/custom_home_back" />
</androidx.constraintlayout.widget.ConstraintLayout>