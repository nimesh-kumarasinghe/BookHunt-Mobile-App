<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="125dp"
        android:layout_height="21dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        app:srcCompat="@drawable/custom_home_back" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="23dp"
        android:layout_height="229dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/img_home_page_books"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_home_back" />

    <ImageView
        android:id="@+id/img_home_page_books"
        android:layout_width="112dp"
        android:layout_height="163dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sampleimage" />

    <TextView
        android:id="@+id/txt_home_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="sans-serif-medium"
        android:text="Book Name"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_home_page_books" />

    <TextView
        android:id="@+id/txt_home_page_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Name"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_home_book_name" />

    <TextView
        android:id="@+id/txt_home_page_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="500 LKR"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_home_page_book_author" />

    <RatingBar
        android:id="@+id/ratingBar_home_books"
        android:layout_width="234dp"
        android:layout_height="42dp"
        android:layout_marginEnd="1dp"
        android:numStars="5"
        android:progressBackgroundTint="#A6A6A6"
        android:progressTint="#FF9800"
        android:rating="1"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:stepSize="1"
        android:transformPivotX="174dp"
        android:transformPivotY="42dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toBottomOf="@+id/txt_home_book_name" />
</androidx.constraintlayout.widget.ConstraintLayout>