<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpPage">

    <View

        android:id="@+id/view_verify"
        android:layout_width="393dp"
        android:layout_height="77dp"
        android:background="@drawable/bg_reset_pw"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btn_back_arr"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#003E68"
        android:src="@drawable/white_back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:fontFamily="@font/segoe_ui_reg"
        android:text="RESET PASSWORD"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgView7"
        android:layout_width="285dp"
        android:layout_height="277dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/reset_verify_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_verify" />

    <TextView
        android:id="@+id/txt_verification"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Verification"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgView7" />

    <TextView
        android:id="@+id/txt_we_ve_sent"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/segoe_ui_reg"
        android:text="We've sent an OTP to your email. Please enter the verification code."
        android:textAlignment="center"
        android:textColor="#676870"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_verification" />

    <EditText
        android:id="@+id/edittxt_enterOTP"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/email_passwrd"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter OTP"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="#5B5B5B"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_we_ve_sent" />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF007CEB"
        android:background="@drawable/blue_btn"
        android:fontFamily="@font/segui_semibld"
        android:text="Verify"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittxt_enterOTP"
        app:layout_constraintVertical_bias="0.195" />

</androidx.constraintlayout.widget.ConstraintLayout>