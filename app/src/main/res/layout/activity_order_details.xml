<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails">

    <ImageButton
        android:id="@+id/button_arrow"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#fff"
        android:src="@drawable/blue_arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/txt_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="144dp"
        android:fontFamily="@font/segoe_ui_reg"
        android:text="Order Details"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <View

        android:id="@+id/view_order"
        android:layout_width="347dp"
        android:layout_height="298dp"
        android:background="@drawable/order_backgrnd"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206"
        tools:visibility="visible" />

    <TextView

        android:id="@+id/txt_book_name"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Book Name: The Heart of Hell"
        android:textAlignment="textStart"
        android:textColor="#212121"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_order" />

    <TextView

        android:id="@+id/txt_order_no"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Order No: 0011 "
        android:textAlignment="textStart"
        android:textColor="#212121"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_book_name" />

    <TextView

        android:id="@+id/txt_order_date"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Order Date: 2023-02-15"
        android:textAlignment="textStart"
        android:textColor="#212121"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_no" />

    <TextView

        android:id="@+id/order_details_txtView5"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Status: Accepted"
        android:textAlignment="textStart"
        android:textColor="#212121"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_date" />

    <TextView

        android:id="@+id/txt_qty"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/segui_semibld"
        android:text="QTY: 1"
        android:textAlignment="textStart"
        android:textColor="#212121"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_txtView5" />

    <TextView
        android:id="@+id/order_details_txtView7"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Total Amount: 500 LKR"
        android:textAlignment="textStart"
        android:textColor="#212121"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_qty"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_buy_now"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:backgroundTint="#FF007CEB"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Buy Now"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

    <Button
        android:id="@+id/btn_add_review"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:backgroundTint="#AAA0A0"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/segui_semibld"
        android:text="Add a Review"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

</androidx.constraintlayout.widget.ConstraintLayout>