<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/review_bg">

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F9F9F9"
        android:fontFamily="@font/segoeui_reg"
        android:text="User Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_book_name"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9F9F9"
        android:fontFamily="@font/segui_semibld"
        android:text="Book Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_name" />

    <TextView
        android:id="@+id/txt_review_txt"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9F9F9"
        android:fontFamily="@font/segoeui_reg"
        android:text="The untold story of courage and sacrifice in the shadow of Iwo Jima."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_book_name" />

    <RatingBar
        android:id="@+id/ratingbar_user"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:backgroundTint="#F9F9F9"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#EB9D00"
        android:rating="4"
        android:scaleX="0.25"
        android:scaleY="0.25"
        android:secondaryProgressTint="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_review_txt" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="-16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>