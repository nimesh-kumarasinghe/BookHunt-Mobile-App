<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="1dp"
        android:layout_height="138dp"
        android:layout_marginStart="4dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/custom_home_back"
        tools:layout_editor_absoluteY="-1dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/background_slot3"
        android:layout_width="304dp"
        android:layout_height="2dp"
        android:layout_marginStart="14dp"
        android:adjustViewBounds="true"
        android:background="#D1D1D1"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_card"
        app:shapeAppearanceOverlay="@style/RoundCorner" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="318dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_slot3"
        app:srcCompat="@drawable/custom_home_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/order_card"
        android:layout_width="318dp"
        android:layout_height="118dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_cart_book_author"
                android:layout_width="288dp"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:text="Unbelievable value, next level storytelling. Abel to get Best knowledge related to Businesses. "
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/txt_cart_book_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_cart_book_name" />

            <TextView
                android:id="@+id/txt_cart_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Book Name"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_cart_item_remove"
                android:layout_width="66dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#FFFFFF"
                android:text="Remove"
                android:textColor="#434343"
                android:textSize="7sp"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#434343"
                app:strokeWidth="0.8dp" />

            <RatingBar
                android:id="@+id/rating_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:numStars="5"
                android:progressBackgroundTint="#A6A6A6"
                android:progressTint="#FF9800"
                android:rating="1"

                android:scaleX="0.4"
                android:scaleY="0.4"
                android:stepSize="1"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_cart_book_author"></RatingBar>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>